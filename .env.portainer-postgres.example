# Example environment file for docker-compose.portainer-postgres.yml
# Copy this file and fill in your values
# Usage:
#   1. Copy this file: cp .env.portainer-postgres.example .env
#   2. Fill in the required values below
#   3. Deploy: docker-compose -f docker-compose.portainer-postgres.yml up -d

# ============================================================================
# APPLICATION SETTINGS (Required)
# ============================================================================

# Your GitHub repository (format: username/repo)
GITHUB_REPOSITORY=humac/claude_app_poc

# JWT secret for authentication (generate with: openssl rand -base64 48)
# REQUIRED: Must be a long random string (minimum 32 characters)
JWT_SECRET=your-super-secret-64-char-random-string-change-me

# Admin email (will be auto-promoted to admin role)
ADMIN_EMAIL=admin@yourdomain.com

# Application port (default: 8080)
APP_PORT=8080

# ============================================================================
# POSTGRESQL SETTINGS (Required)
# ============================================================================

# Database name
POSTGRES_DB=ars

# Database user
POSTGRES_USER=ars_app

# Database password (REQUIRED - use a strong password!)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-postgres-password-change-me

# Database port (default: 5432)
POSTGRES_PORT=5432

# Enable SSL for PostgreSQL connections (true/false)
POSTGRES_SSL=false

# ============================================================================
# PORTAINER SETTINGS (Optional)
# ============================================================================

# Portainer admin password (bcrypt hash)
# If not set, Portainer will prompt for password creation on first access
# Generate hash with: htpasswd -nbB admin "your-password" | cut -d ":" -f 2
# Note: In docker-compose, escape $ with $$ (e.g., $$2y$$05$$...)
# PORTAINER_ADMIN_PASSWORD=

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Required variables: JWT_SECRET, POSTGRES_PASSWORD
# 2. All other variables have sensible defaults
# 3. Generate strong random passwords for production
# 4. Never commit this file with real values to version control
# 5. For Portainer UI: Access at http://localhost:9000 or https://localhost:9443
# 6. For PostgreSQL: Accessible at localhost:5432 (change POSTGRES_PORT if needed)
